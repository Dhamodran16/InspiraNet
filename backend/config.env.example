# Server Configuration
PORT=5000
NODE_ENV=development
BACKEND_URL=http://localhost:5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/inspiranet

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_random
JWT_REFRESH_SECRET=your_refresh_jwt_secret_key_here_make_it_long_and_random

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Frontend URLs (comma-separated for multiple)
FRONTEND_URL=http://localhost:8083

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_POST=5

# Email Configuration (Optional - for automated notifications)
# If not configured, the system will use console logging instead
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Note: For Gmail, you need to:
# 1. Enable 2-factor authentication
# 2. Generate an App Password
# 3. Use the App Password instead of your regular password

# Security
CORS_ORIGIN=http://localhost:8083
SESSION_SECRET=your_session_secret_here

# Google OAuth Configuration (for Google Meet integration)
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:5000/api/google/oauth/callback
GOOGLE_SCOPES=https://www.googleapis.com/auth/calendar.events,https://www.googleapis.com/auth/userinfo.email,https://www.googleapis.com/auth/userinfo.profile

# Optional: Service Account for Workspace Domain-Wide Delegation
# GOOGLE_SA_CLIENT_EMAIL=your_service_account@your_project.iam.gserviceaccount.com
# GOOGLE_SA_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# GOOGLE_WORKSPACE_IMPERSONATE_EMAIL=host@yourdomain.com
