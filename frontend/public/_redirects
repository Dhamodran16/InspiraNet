# Handle nested routes
/meeting/:roomId    /index.html   200
/profile/:userId    /index.html   200
/messages/:conversationId    /index.html   200

# Ensure static assets are served correctly
/assets/*    /assets/*   200
/icons/*    /icons/*   200
*.ico    /favicon.ico   200
